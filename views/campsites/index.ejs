<% layout('layouts/boilerplate') %>

  <h1>All camps</h1>
  <div>
    <a href="/camps/new">Add camp</a>
  </div>

  <% for(let camp of camps){%>
    <!-- <li><a href="/camps/<%=camp._id%>">
        <%= camp.title %>
      </a></li> -->
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img src="<%= camp.image %>" class="img-fluid" alt="">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= camp.title %>
            </h5>
            <p class="card-text">
              <%= camp.description %>
            </p>
            <p class="card-text">
              <small class="text-muted"><%= camp.location %></small>
            </p>
            <a href="/camps/<%=camp._id%>" class="btn btn-primary">View Camp</a>
          </div>
        </div>
      </div>
    </div>
    <% }%>