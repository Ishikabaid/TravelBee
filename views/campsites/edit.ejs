<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Camp</h1>
        <div class="col-6 offset-3">

            <form action="/camps/<%=foundcamp._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%=foundcamp.title%>" required>
                </div>
                <div class="mb-3">

                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"" value="<%=foundcamp.location%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" placeholder="camp image"
                        name="campground[image]" value="<%=foundcamp.image%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <input class="form-control" type="number" id="price" placeholder="0.00" name="campground[price]" value="<%=foundcamp.price%>" required/>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" placeholder="camp description"
                        name="campground[description]" required><%=foundcamp.description%></textarea>
                </div>

                <button class="btn btn-info">Update Camp</button>
            </form>
            <a href="/camps/<%=foundcamp._id%>">Back to camp</a>

        </div>
    </div>