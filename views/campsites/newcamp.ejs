<% layout('layouts/boilerplate') %>

  <div class="row">
    <h1 class="text-center">New camp</h1>
    <div class="col-md-6 offset-md-3">
      <div class="card shadow">
        <div class="card-body">
      <form action="/camps" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" placeholder="camp title" name="campground[title]" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" placeholder="camp location" name="campground[location]"
            required>
        </div>
        <div class="mb-3">
          <label for="">Upload images</label>
        <div class="custom-file">
          <label for="image" class="form-label custom-file-label"></label>
          <input class="form-control" type="file" id="image" name="image" multiple>
        </div>
      </div>
        <!-- <div class="mb-3">
          <label class="form-label" for="image">Image Url</label>
          <input class="form-control" type="text" id="image" placeholder="camp image" name="campground[image]" required>
        </div> -->
        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <input class="form-control" type="number" id="price" placeholder="0.00" name="campground[price]" required />
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" placeholder="camp description"
            name="campground[description]" required></textarea>
        </div>
        <button class="btn btn-success">Add Camp</button>
      </form>
      <a href="/camps">all camps</a>
    </div>
  </div>
    </div>
  </div>


